{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build active file",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++11",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilateur: g++"
		}
	]
}